<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AliceBlue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <RelativeLayout
        android:id="@+id/gameBoard"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="69dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TableRow
                android:id="@+id/topRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TableRow
                    android:id="@+id/topLeft"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/space11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/empty"
                        android:tag="@string/empty_space" />

                </TableRow>

                <TableRow
                    android:id="@+id/topvborder1"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:background="@color/Black" >
                </TableRow>

                <TableRow
                    android:id="@+id/topMid"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/space12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/empty"
                        android:tag="@string/empty_space" />

                </TableRow>

                <TableRow
                    android:id="@+id/topvborder2"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:background="@color/Black" >
                </TableRow>

                <TableRow
                    android:id="@+id/topRight"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/space13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/empty"
                        android:tag="@string/empty_space" />

                </TableRow>
            </TableRow>

            <TableRow
                android:id="@+id/hBorder1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/Black" >

            </TableRow>

            <TableRow
                android:id="@+id/middleRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TableRow
                    android:id="@+id/midLeft"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/space21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/empty"
                        android:tag="@string/empty_space" />

                </TableRow>

                <TableRow
                    android:id="@+id/midvborder1"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:background="@color/Black" >

                </TableRow>

                <TableRow
                    android:id="@+id/midMid"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/space22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/empty"
                        android:tag="@string/empty_space" />

                </TableRow>

                <TableRow
                    android:id="@+id/midvborder2"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:background="@color/Black" >
                </TableRow>

                <TableRow
                    android:id="@+id/midRight"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/space23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/empty"
                        android:tag="@string/empty_space" />

                </TableRow>

            </TableRow>

            <TableRow
                android:id="@+id/hBorder2"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/Black" >

            </TableRow>

            <TableRow
                android:id="@+id/bottomRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TableRow
                    android:id="@+id/bottomLeft"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/space31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/empty"
                        android:tag="@string/empty_space" />

                </TableRow>

                <TableRow
                    android:id="@+id/bottomvborder1"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:background="@color/Black" >
                </TableRow>

                <TableRow
                    android:id="@+id/bottomMid"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/space32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/empty"
                        android:tag="@string/empty_space" />

                </TableRow>

                <TableRow
                    android:id="@+id/bottomvborder2"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:background="@color/Black" >
                </TableRow>

                <TableRow
                    android:id="@+id/bottomRight"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/space33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/empty"
                        android:tag="@string/empty_space" />

                </TableRow>
            </TableRow>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/gameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gameBoard"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:text="@string/play_game"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>